
/* a)*/
SELECT produto,
    CASE
        WHEN quantidade > 0 THEN 'Em estoque'
        ELSE 'Fora de estoque'
    END AS status
FROM produtos;

/*b)*/
SELECT produto,
    CASE
        WHEN preco < 50 THEN 'quase de graça'
        WHEN preco >= 50 AND preco <= 100 THEN 'Médiano'
        ELSE 'preco salgado'
    END AS categorias_preco
FROM produtos;
