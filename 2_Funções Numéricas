-- a)
CREATE TABLE nomes (
    nome VARCHAR(60)
);

INSERT INTO nomes (nome) VALUES
    ('Taldo'),
    ('Jubileu'),
    ('Jordao'),
    ('Adevaldo');

-- b)
SELECT UPPER(nome) FROM nomes;

-- c)
SELECT nome, LENGTH(nome) AS tamanho FROM nomes;

-- d)
SELECT
    CASE
        WHEN nome LIKE '%Jordao%' THEN CONCAT('Sra. ', nome)
        ELSE CONCAT('Sr. ', nome)
    END AS nome_arrumado
FROM nomes;
``

